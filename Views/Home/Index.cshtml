@model IEnumerable<Treino_Mvc.Models.Noticia>
@{
    ViewData["Title"] = "Home Page";
}

<partial  name="_SlideShow" />



<div class="col-lg-12 col-md-12 col-sm-12">
    @foreach(var item in Model)
    {
        <div class="col-lg-6 bg-black">
        <img src="@item.Imagem" class="img-fluid" asp-append-version="true" style="height:100px; width: 100px" />
        <a asp-controller="Noticias" asp-action="NoticiaCompleta" asp-route-noticiaId="@item.NoticiaId">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <p class="card-text">  @Html.DisplayFor(modelItem => item.Titulo)</p>
            </div>
        </div>
        </a>
        </div>
       
    
    }
</div>
